#include "pch.h"
#include "iostream"
#include <math.h>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	int n, m = 1;
	cout << "Введите целое положительное число n" << endl;
	cin >> n;
	if (n > 1) 
	{
		for (int i = 1; i < (n+1); i++)
			m *= i;
		cout << "Ответ: " << m << endl;
	}
	else if (n == 1) { cout << "Ответ: 1." << endl; }
	else if (n == 0) { cout << "Ответ: 1." << endl; }
	else
		cout << "Введено отрицательное число." << endl;
	system("pause");
	return 0;
}
